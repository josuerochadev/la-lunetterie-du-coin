# GitAttributes - Configuration pour GitHub Linguist

# Exclure les lockfiles de la détection de langage
pnpm-lock.yaml linguist-generated=true
package-lock.json linguist-generated=true
yarn.lock linguist-generated=true

# Exclure les résultats de tests
e2e-results/ linguist-generated=true
test-results/ linguist-generated=true
coverage/ linguist-generated=true
lighthouse-results/ linguist-generated=true

# Exclure les fichiers de build
dist/ linguist-generated=true
build/ linguist-generated=true

# Marquer les vrais langages du projet
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript
*.js linguist-language=JavaScript
*.jsx linguist-language=JavaScript

# Documentation
*.md linguist-documentation=true