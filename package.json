{
  "name": "frontend-vite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.6.5",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview --port 4173 --strictPort",
    "preview:host": "vite preview --host --port 4173 --strictPort",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright show-report e2e-results",
    "lighthouse": "npm run build && start-server-and-test preview http://localhost:4173 'lhci autorun'",
    "lighthouse:mobile": "npm run lighthouse",
    "lighthouse:desktop": "npm run build && start-server-and-test preview http://localhost:4173 'lhci autorun --config=lighthouserc.desktop.cjs'",
    "axe": "MOZ_HEADLESS=1 axe --exit --browser firefox http://localhost:4173",
    "a11y": "vite build && start-server-and-test preview http://localhost:4173 axe",
    "lint": "eslint . --ext ts,tsx --max-warnings=0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "prepare": "husky install",
    "img:optimize": "node scripts/optimize-images.mjs",
    "kill:preview": "pkill -f 'vite preview' || true",
    "quality:report": "node scripts/generate-quality-report.js",
    "quality:check": "npm run lint && npm run test:coverage && npm run quality:report"
  },
  "dependencies": {
    "@dr.pogodin/react-helmet": "^3.0.4",
    "@sentry/react": "^10.11.0",
    "@sentry/vite-plugin": "^4.3.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.541.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.8.2",
    "split-type": "^0.3.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.2",
    "lint-staged": "^16.1.6",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rollup-plugin-gzip": "^4.1.1",
    "sharp": "^0.34.3",
    "sharp-cli": "^5.2.0",
    "start-server-and-test": "^2.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.5",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "^3.2.4"
  }
}
